<style>
   .product-list {

   } 
   .product-list_products {
       display: flex;
       flex-wrap: wrap;
   }
   .product-list_product_item {
       padding: 20px;
       margin: 20px;
       background: #fff;
       list-style: none;
   }
</style>

<div class="page-width">
    {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    <ul class="product-list_products">
        {% for product in collections[section.settings.collection].products %}
        <li class="product-list_product_item">
            <img src="{{ product.featured_image | img_url: width: 400 }}" alt="" loading="lazy">
            <h3>{{ product.title }}</h3>
            <div><del>{{ product.compare_at_price | money }}</del> 
                - 
            {{ product.price | money_with_currency }}</div>
           
            <a href="#" class="button" {% if product.available %} disabled {% endif %}>Buy now</a> 
        
        </li>
     {% endfor %}
    </ul>
</div>


{% schema %}
{
  "name": "Product List",
  "tag": "section",
  "class": "product-list", 
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Label",
        "default": "Product List"
    },
    {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
      
    ]
}
{% endschema %}